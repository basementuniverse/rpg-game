{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./build/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
